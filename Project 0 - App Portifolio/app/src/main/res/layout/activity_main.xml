<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appportifolio.rhatori.myappportifolio.MainActivity"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POPULAR MOVIES"
        android:id="@+id/btnPopularMovies"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/button_width"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButtonBackground"
        android:layout_margin="@dimen/button_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOCK HAWK"
        android:id="@+id/btnStockHawk"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/button_width"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorButtonText"
        android:layout_margin="@dimen/button_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/btnBuildItBigger"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/button_width"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorButtonText"
        android:layout_margin="@dimen/button_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" MAKE YOUR APP MATERIAL"
        android:id="@+id/btnMakeYourAppMaterial"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/button_width"
        android:forceHasOverlappingRendering="false"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorButtonText"
        android:layout_margin="@dimen/button_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GO UBIQUITOUS"
        android:id="@+id/btnGoUbiquitous"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/button_width"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorButtonText"
        android:layout_margin="@dimen/button_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE"
        android:id="@+id/btnCapstone"
        android:layout_gravity="center_horizontal"
        android:width="@dimen/button_width"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorButtonText"
        android:layout_margin="@dimen/button_margin" />
</LinearLayout>
